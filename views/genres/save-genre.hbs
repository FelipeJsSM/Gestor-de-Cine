<div class="row">
    <div class="col-12 col-sm-6 offset-sm-3">

        <div class="card">
            <div class="card-header bg-primary text-light">
                Formulario de Genero
            </div>
            <div class="card-body">

                <form id="genreForm" method="POST" action="/admin/genres/{{#if editMode}}edit-genre{{else}}add-genre{{/if}}">
                    <div class="mb-3">
                        <label for="title" class="form-label">Nombre</label>
                        <input type="text" {{#if editMode}} value="{{genre.name}}" {{/if}} class="form-control"
                            id="title" name="Name" />
                    </div>
                    {{#if editMode}}
                    <input type="hidden" value="{{genre.id}}" name="GenreId">
                    {{/if}}

                    <button type="submit" class="btn btn-primary float-end" id="btn-Save">Save</button>
                    <a href="/admin/genres" class="btn btn-warning float-end me-2">Back to list</a>
                </form>
            </div>
        </div>
    </div>
</div>